        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.Light"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserRegisterActivity" />
        <activity android:name=".UserLoginActivity" />
        <activity android:name=".UserProfileEditActivity" />
        <activity android:name=".UserProfileShowActivity" />
        <activity android:name=".SearchCreateActivity" />
        <activity android:name=".PetsShowActivity" />
        <activity android:name=".PetAddActivity" />
        <activity android:name=".PetProfileEditActivity" />
        <activity android:name=".PetProfileShowActivity" />
        <activity android:name=".SearchDetailsActivity" />
        <activity android:name=".PetsitterRegisterActivity" />
        <activity android:name=".PetsitterDetailsActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".SearchesListActivity" />
        <activity android:name=".MessagesListActivity" />
        <activity android:name=".MessageReadActivity" />
        <activity android:name=".MessageWriteActivity" />
    </application>

</manifest>