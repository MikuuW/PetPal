<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape>
            <solid android:color="#00000000" /> <!-- Transparent background -->
            <stroke
                android:width="1dp"
                android:color="#000000" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
